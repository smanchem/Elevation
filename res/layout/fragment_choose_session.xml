<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elevation.ChooseSessionActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="0.26"
        android:text="@string/choose_session"
        android:textSize="30sp" />

    <Button
        android:id="@+id/long_session"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="start_elevation_long"
        android:text="@string/long_session"
        android:textSize="30sp" />

    <Button
        android:id="@+id/short_session"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="start_elevation_short"
        android:text="@string/short_session"
        android:textSize="30sp" />

</LinearLayout>